[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=tab
tab_width=4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[{*.pyw,*.py}]
indent_style=space
indent_size=4

[*.pyi]
indent_style=space
indent_size=4

[{*.pyx,*.pxi,*.pxd}]
indent_style=space
indent_size=4

[{*.applejs,*.js}]
indent_style=space
indent_size=2

[*.js.map]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=4

[yarn.lock]
indent_style=space
indent_size=4

